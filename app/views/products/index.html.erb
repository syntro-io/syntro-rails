<h1>Products</h1>
<% @products.each do |product| %>
  <div class="col-md-3 col-sm-6 hero-feature">
    <div class="thumbnail">
      <img src="http://placehold.it/800x500" alt="">
      <div class="caption">
        <h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <p>
          <%= link_to "List", list_test_plans_path(product.id), :class => "btn btn-primary" %>
          <%= link_to "Edit", edit_product_path(product), :class => "btn btn-primary" %>
          <%= link_to "Delete", product, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-default" %>
        </p>
      </div>
    </div>
  </div>
<% end %>

<% if can? :create, Product %>
  <div class="addLink"><%= link_to "New Product", new_product_path, :class => "btn btn-primary" %></div>
<% end %>
