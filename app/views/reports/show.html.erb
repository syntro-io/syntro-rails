<h1>Report</h1>

<div class="row-fluid">
  <div class="span12">
    <legend class="show">Report Overview</legend>
    <table class="table">
      <tbody>
        <tr>
          <td class="title">Report type</td>
          <td><%= @report.report_type %></td>
        </tr>

        <tr>
          <td class="title">Product</td>
          <td><%=  if @report.product then @report.product.name end %></td>
        </tr>

        <tr>
          <td class="title">Version</td>
          <td><%= if @report.version then @report.version.version end %></td>
        </tr>
        
        <tr>
          <td class="title">Second Version</td>
          <td><%= if @report.second_version then @report.second_version.version end %></td>
        </tr>

        <tr>
          <td class="title">Start date</td>
          <td><%= @report.start_date %></td>
        </tr>

        <tr>
          <td class="title">End date</td>
          <td><%= @report.end_date %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="addLink">
<%= link_to "Edit", edit_report_path(@report), :class => "btn btn-primary"  %>
<%= link_to "Run", run_report_path(@report), :class => "btn btn-success"  %>
<a href='#' onclick='history.go(-1);return false;', class="btn btn-inverse">Back</a>
</div>