<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <%= simple_form_for @task, :html => { :class => 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
        <fieldset>
            <legend>
                Task Overview
            </legend>
            <%= f.input :name %>

            <%= f.input :user_id, as: :select, collection: @users_select %>

            <%= f.input :task, as: :select, collection: task_types %>
            <%= f.input :status, as: :select, collection: task_status %>
            <%= f.input :description, :input_html => {:rows => 5}, wrapper: :horizontal_form_text_area %>
            <%= f.input :due_date, as: :string, :size => 12 %>
            <%= f.input :completion_date, as: :string, :size => 12 %>
            <div class="actions">
                <%= f.submit nil, :class => "btn btn-success" %>
                <a href='#' onclick='history.go(-1);return false;', class="btn btn-default">Back</a>
            </div>
        </fieldset>
        <% end %>
    </div>
</div>